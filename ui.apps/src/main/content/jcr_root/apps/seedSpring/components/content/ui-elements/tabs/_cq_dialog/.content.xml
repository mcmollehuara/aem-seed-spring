<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Tabs"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/foundation/container">
        <layout jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns" margin="{Boolean}false" type="nav"/>
            <items jcr:primaryType="nt:unstructured">
                <column jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/foundation/container">
                   <items jcr:primaryType="nt:unstructured">
                        <type jcr:primaryType="nt:unstructured" fieldLabel="Type" name="./type" 																
                            sling:resourceType="granite/ui/components/foundation/form/select" required="{Boolean}true" >
                            <items jcr:primaryType="nt:unstructured">
                                <default jcr:primaryType="nt:unstructured" text="Default" value=""/>	
                                <right jcr:primaryType="nt:unstructured" text="Right" value="tabs-right"/>                                                                                                                        
                                <left jcr:primaryType="nt:unstructured" text="Left" value="tabs-left"/>                                                                                                                                                                
                            </items>
                        </type>                    
                        <data
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/textarea"
                            fieldLabel="Data"
                            name="./data"/>                                                                                                                     
                    </items>
                </column>
            </items>
    </content>
</jcr:root>
